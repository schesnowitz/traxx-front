
<%= simple_form_for(@driver_application) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :dob %>
    <%= f.input :social %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :postal %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :year %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :color %>
    <%= f.input :vin %>
    <%= f.input :mileage %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
