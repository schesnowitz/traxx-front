<%= render "layouts/pages/partials/show/header" %>
<%= render "layouts/pages/partials/show/navbar2" %>         
<br><br><br><br><br>
<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Title -->
      <h1 class="mt-4"><%= @post.title %></h1>
      <!-- Author -->
      <p class="lead">
        by
        <a href="#"><%= @post.user.username %></a>
      </p>
      <hr>
      <!-- Date/Time -->
      <p>Published <%= time_ago_in_words(@post.created_at)%> ago</p>
      <hr>
      <!-- Preview Image -->
      <% if @post.image1.attached? %>
            <%= image_tag @post.image1.variant(resize: "900x300"), class:"img-fluid rounded" %>
      
      <% else %>
      <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
      <% end %>
      <hr>
      <p>
        <%= @post.body.html_safe %>
      </p>
      <hr>
      <!-- Comments Form -->
    </div>
    <!-- /.row -->
  </div>
</div>
<!-- /.container -->
<% if current_user.try(:is_admin?) %> 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>
<%= render "layouts/pages/partials/show/footer" %>